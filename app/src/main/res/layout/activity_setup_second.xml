<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.smart.thuans.homeassistance.setup.SetupSecond"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:paddingTop="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="45dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:text="@string/setup_owner_name"
                android:textColor="@color/colorTextSetup"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtOwnerName"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Bin"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/editicon"
                android:layout_alignTop="@+id/txtOwnerName"
                android:layout_toRightOf="@+id/txtOwnerName"
                android:layout_toEndOf="@+id/txtOwnerName" />

            <ImageButton
                android:id="@+id/btnBotNameSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/audiospeaker"
                android:text="Nghe"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnBotNameSpeak"
                android:layout_alignLeft="@+id/txtOwnerName"
                android:layout_alignStart="@+id/txtOwnerName"
                android:text="@string/setup_hint"
                android:textColor="@color/colorTextHint"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:text="@string/set_up_owner_role"
                android:textColor="@color/colorTextSetup"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtOwnerRole"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Anh"
                android:layout_above="@+id/textView11"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/editicon"
                android:layout_alignTop="@+id/txtOwnerRole"
                android:layout_toRightOf="@+id/txtOwnerRole"
                android:layout_toEndOf="@+id/txtOwnerRole" />

            <ImageButton
                android:id="@+id/btnBotNameSpeak2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/audiospeaker"
                android:text="Nghe"
                android:layout_below="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnBotNameSpeak2"
                android:layout_alignLeft="@+id/txtOwnerRole"
                android:layout_alignStart="@+id/txtOwnerRole"
                android:text="@string/setup_hint"
                android:textColor="@color/colorTextHint"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:text="@string/set_up_bot_role"
                android:textColor="@color/colorTextSetup"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtBotRole"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Em"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/editicon"
                android:layout_alignTop="@+id/txtBotRole"
                android:layout_toRightOf="@+id/txtBotRole"
                android:layout_toEndOf="@+id/txtBotRole" />

            <ImageButton
                android:id="@+id/btnBotNameSpeak3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:maxHeight="70dp"
                android:maxWidth="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/audiospeaker"
                android:text="Nghe"
                android:layout_below="@+id/textView6"
                android:layout_alignRight="@+id/textView12"
                android:layout_alignEnd="@+id/textView12" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnBotNameSpeak3"
                android:layout_alignLeft="@+id/txtBotRole"
                android:layout_alignStart="@+id/txtBotRole"
                android:text="@string/setup_hint"
                android:textColor="@color/colorTextHint"
                android:textSize="16sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnSetup2Done"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/buttondone"
                android:text="Next"
                android:layout_marginRight="27dp"
                android:layout_marginEnd="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp" />
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
