<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.smart.thuans.homeassistance.setup.SetupThird">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_device_list"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lstDevice"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:layout_weight="0.47" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRenameDevice"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:text="Đặt lại tên thiết bị" />

            <Button
                android:id="@+id/btnSetup3Done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiếp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
